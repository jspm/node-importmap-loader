{
  "name": "@jspm/node-importmap-loader",
  "version": "0.2.3",
  "description": "JSPM's node importmap loader ⚡️",
  "type": "module",
  "main": "dist/loader.js",
  "types": "dist/loader.d.ts",
  "exports": {
    ".": "./dist/loader.js"
  },
  "bin": {
    "load-node-importmap": "node --loader dist/loader.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Jaya Krishna Namburu <namburu1995@gmail.com>",
  "homepage": "https://jspm.org/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/shave.git"
  },
  "contributors": [
    {
      "name": "Jeff Wainwright",
      "email": "yowainwright@gmail.com",
      "url": "https://jeffry.in"
    },
    {
      "name": "Jaya Krishna Namburu",
      "email": "namburu1995@gmail.com",
      "url": "https://github.com/JayaKrishnaNamburu"
    }
  ],
  "scripts": {
    "test": "time chomp test:e2e",
    "dir-size": "chomp dir-size"
  },
  "dependencies": {
    "@jspm/generator": "^2.5.1",
    "@jspm/import-map": "^1.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@swc/core": "^1.3.74",
    "@types/node": "^20.4.7",
    "@types/node-fetch": "^2.6.4",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "chomp": "^0.2.17",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.1",
    "sinon": "^17.0.1",
    "tslib": "^2.6.1",
    "tsup": "^7.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.1.6"
  },
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "upper-case",
          "pascal-case",
          "start-case"
        ]
      ],
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "refactor",
          "revert",
          "breaking"
        ]
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "prefer-destructuring": [
        "error",
        {
          "AssignmentExpression": {
            "array": false,
            "object": false
          }
        }
      ],
      "@typescript-eslint/no-explicit-any": [
        "warn"
      ]
    }
  },
  "prettier": {
    "printWidth": 120
  }
}
